# My Basic Editor Config
# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 4

[*.txt]
indent_style = tab
indent_size = 4


[*.sh]
end_of_line = lf

[*.{cmd, bat}]
end_of_line = crlf

[Dockerfile]
indent_size = 4

[*.{py,java}]
indent_style = space
indent_size = 4
